# Configuration AFERTES Connect
# Copiez ce fichier en .env et modifiez les valeurs

# Port du serveur (YunoHost assignera automatiquement)
PORT=3000

# Base de données PostgreSQL
# Sur YunoHost, ces valeurs sont fournies automatiquement
DB_HOST=localhost
DB_PORT=5432
DB_NAME=afertes_connect
DB_USER=afertes
DB_PASSWORD=votre_mot_de_passe_securise

# JWT Secret (générez une clé aléatoire de 64 caractères minimum)
JWT_SECRET=CHANGEZ_MOI_avec_une_cle_aleatoire_tres_longue_et_securisee_64_chars_minimum

# Durée de validité des tokens (en heures)
JWT_EXPIRES_IN=24

# Environnement
NODE_ENV=production

# URL de l'application (pour les emails, etc.)
APP_URL=https://afertes-connect.votre-domaine.fr

# Dossier de stockage des documents
UPLOAD_DIR=./uploads
